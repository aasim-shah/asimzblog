{{>header}}
{{>navbar}}
<title>Home Page </title>
{{>carousel}}

<div class="col-md-10 flex-wrap my-3 d-flex mx-auto">
{{#items}}
  <a href="/product/{{name}}" class=" mx-3"  style="width: 228px;"> 
    <div class="">
      <img src="{{image}}" class="col-12 col-md-12" alt="..."  style="height: 270px; max-height:270px;"> 
      <div class="card-body">


        <h5 class="card-title">{{name}} </h5>

      </div>
    </div>
  </a>
  {{/items}}
</div>
<div class="col-md-4 col-9 mx-auto text-center">
  <form action="/addproduct" method="post" enctype="multipart/form-data">
    <input type="text" name="pName" id="" placeholder="Product name" class="form-control">
    <input type="text" name="pPrice" id="" placeholder="Product price" class="form-control my-3">
    <input type="file" name="pImage" id="" placeholder="Product price" class="form-control my-3">
    <button type="submit" class="btn btn-sm btn-info w-50 mt-2 ">Add</button>
  </form>
</div>
{{>footer}}

